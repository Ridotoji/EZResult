<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hunghoang.ezresult.BaseAreaActivity">

    <ImageView
        android:id="@+id/pyramidImg"
        android:layout_width="395dp"
        android:layout_height="266dp"
        app:srcCompat="@drawable/ic_action_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Width"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/pyramidImg"/>

    <EditText
        android:id="@+id/widthNumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/width"
        />

    <TextView
        android:id="@+id/length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Length"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/widthNumb"/>

    <EditText
        android:id="@+id/lengthNumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/length" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Result"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/lengthNumb" />

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="onClickDone"
        android:text="Done"
        app:layout_constraintBottom_toTopOf="@+id/useThis"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/useThis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:text="Use this result to find volume"
        android:onClick="onClickUseThis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>
