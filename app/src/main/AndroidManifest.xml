<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hunghoang.ezresult">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShapesInfoActivity"
            android:label="@string/title_activity_shapes_info"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".BaseAreaActivity"
            android:label="@string/title_activity_py_calculator"
            android:parentActivityName=".PyCalculatorActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VolumeActivity"
            android:label="@string/title_activity_py_calculator"
            android:parentActivityName=".PyCalculatorActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PyCalculatorActivity"
            android:label="@string/title_activity_py_calculator"
            android:theme="@style/AppTheme" />

    </application>

</manifest>